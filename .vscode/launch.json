{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "TS",
      "runtimeArgs": ["-r", "ts-node/register","--inspect-brk"],
      "args": ["src/app.ts"],
      "restart": true,
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true
    }
  ]
}
